<script>
    $(document).ready(function () {
        $("button[name='export']").click(function(){
            var table = $(this).prev('#myTable');
            var preserveColors = (table.hasClass('table2excel_with_colors') ? true : false);
            $("#myTable").table2excel({
                exclude: "noExl",
                name: "abc",
                filename: "test",
                exclude_img: true,
				exclude_links: true,
			    exclude_inputs: true,
				preserveColors: preserveColors
            });
        });

        $("#lop").on('change', function () {
            var id = this.value;
            $.get(url + "admin/calendar/ajax/" + id, function (data) {
                $("#tableShow").html(data);
            });
        });

        $.get(url + "admin/calendar/ajax/" + $("#lop").val(), function (data) {
            $("#tableShow").html(data);
        });
    });
</script>

